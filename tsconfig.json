{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "axios",
      "react-router",
      "react",
      "react-dom",
      "react-addons-test-utils",
      "jasmine",
      "es6-shim"
    ],
    "baseUrl": ".",
    "paths": {
      "react-svg-inline": ["node_modules/react-svg-inline/src/index"]
    }
  },
  "compileOnSave": false,
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!node_modules/**"
  ]
}
